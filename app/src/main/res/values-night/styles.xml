<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/popup_bg</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.App.PopupMenuItem</item>
    </style>

    <style name="TextAppearance.App.PopupMenuItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/popup_text</item>
    </style>

    <style name="RatingBarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlActivated">@color/hot_pink</item>
        <item name="colorControlNormal">@color/hot_pink</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:background">?android:colorBackground</item>
    </style>
</resources>